<div class="container-xxl flex-grow-1 container-p-y ">
    @*<!-- Layout Demo -->
    <div class="layout-demo-wrapper">
    <div class="layout-demo-placeholder">
    <img
    src="../assets/img/layouts/layout-container-light.png"
    class="img-fluid"
    alt="Layout container"
    data-app-light-img="layouts/layout-container-light.png"
    data-app-dark-img="layouts/layout-container-dark.png"
    />
    </div>
    <div class="layout-demo-info">
    <h4>Layout container</h4>
    <p>Container layout sets a <code>max-width</code> at each responsive breakpoint.</p>
    </div>
    </div>
    <!--/ Layout Demo -->*@







    <div class="mt-0 mb-4">
        <button type="submit" class="btn btn-primary " onclick="location.href='@Url.Action("Create", "Clubs")'">
            <i class='bx bx-message-square-add'></i>
            Add New Club
        </button>
    </div>

    <!-- Horizontal -->
    <h5 class="pb-1 mb-4">Horizontal</h5>

    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            No movies found!
        </div>
    }
    else
    {
        @foreach (var club in Model)
        {

            <div class="row mb-5">
                <div class="col-md">
                    <div class="card mb-3">
                        <div class="row g-0 ">
                            <div class="col-md-4  myposter" style="background-image: url(data:image\/*;base64,@(Convert.ToBase64String(club.Logo)))"></div>
                            @*<img class="card-img card-img-left" src="../assets/img/elements/12.jpg" alt="Card image" />*@

                            <div class="col-md-8">
                                <div class="card-body">

                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title mt-2">@club.Name - @club.Year</h5>
                                        <!-- Icon Dropdown -->

                                        <div>
                                            <div class="btn-group mt-0">
                                                <button type="button"
                                                class="btn btn-primary btn-icon rounded-pill dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li><a class="dropdown-item" href="javascript:void(0);">Action</a></li>
                                                    <li><a class="dropdown-item" href="javascript:void(0);">Another action</a></li>
                                                    <li><a class="dropdown-item" href="javascript:void(0);">Something else here</a></li>
                                                    <li>
                                                        <a asp-action="Edit" asp-route-id="@club.Id" class="btn btn-outline-primary">
                                                            <i class="bi bi-pencil"></i>
                                                            Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <hr class="dropdown-divider" />
                                                    </li>
                                                    <li><a class="dropdown-item" href="javascript:void(0);">Separated link</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                        <!--/ Icon Dropdown -->
                                    </div>

                                    <p class="card-text mb-0 mt-4">
                                        @(club.Titles.Length > 500 ? $"{club.Titles.Substring(0, 500)}..." : club.Titles)
                                    </p>

                                    @*<p class="card-text mb-0 mt-2"><small class="text-muted"><i class='bx bxs-star'></i>@club.Rate</small></p>*@
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-2">
                                            <i class='bx bxs-star'></i>
                                            <small class="text-muted">@club.Rate.ToString("0.0")</small>
                                        </p>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!--/ Horizontal -->
        }
    }
</div>